@using ASPNETSimpleMVC3.Models;
@model IEnumerable<SimpleDirectoryEntry>

@{
    ViewBag.Title = "Directory";
}

<h2>Directory</h2>

@{
    WebGrid grid = new WebGrid(
        source: Model,
        columnNames: new string[] { "Name", "Title", "Email" },
        defaultSort: "Name",
        rowsPerPage: 5);
}

<div class="centered">
    @grid.Pager()
</div>
<div class="centered">
    @grid.Table(tableStyle: "directory-table")
</div>